<body>
    <%- include ('navbar') %>
     
    
    <%if(locals.errorMessage){%>
        <p style="color: orangered;"><%= locals.errorMessage%> </p> 
        <%} %>
    <form action="/signin" method="post">
    <div class="container">
    <ion-icon name="person-circle-outline"></ion-icon>
    <h1>Welcome Back to Usalama!</h1>

        
    
    
    <div class="wrapper container-sm container">
        <h3 class="text-center  mb-5 pt-5">Sign In To Usalama App</h3>
