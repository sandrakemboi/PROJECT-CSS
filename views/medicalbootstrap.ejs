<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      /* sign-in & sign-up*/
     
body{
        background-color:#428f66 !important;
      
      }
  #medical{
    margin: 60px auto;
    display: flex;
    flex-direction: column;
    background-color:#ffffff;
    width: 40%;
      
  }
  .input-control input{
      width: 60%;
      padding: 12px;
      border: 1px solid grey;
      border-radius: 5px; 
      
  }
  .form-text{
    display: none;
  }
  
  .double-input div{
      width: 45%;
      
  }
  
  .btn{
      width: 100%;
      background-color: #aee3c7;
  }
  
  /*Medical info*/
  
  
  
    </style>

</head>

<body class="medical">
    <%- include("navbar.ejs") %> 

    <div class="container p-5 shadow rounded" id="medical">
        <form method="post" action="/medicalbootstrap">
            <p class="lead">Kindly fill in the form. Fields with an asterisk (*) are compulsory.</p>

            <!-- Contact Number -->
            <div class="mb-3">
                <label for="contact" class="form-label">Contact Number*</label>
                <input type="text" name="Phone_number" value="" class="form-control" id="contact" required>
                <div id="error" class="form-text">Error.</div>
            </div>

            <!-- Date of Birth -->
            <div class="mb-3">
                <label for="dob" class="form-label">D.O.B*</label>
                <input type="date" name="Date_of_birth" value="" class="form-control" id="dob" required>
                <div id="error" class="form-text">Error.</div>
            </div>

            <!-- Blood Group -->
            <div class="mb-3">
                <label for="blood_group" class="form-label">Blood Group</label>
                <select class="form-select" name="Blood_group" id="blood_group" required>
                    <option value="" >Select your blood group</option>
                    <option value="A+">A+</option>
                    <option value="A-" >A-</option>
                    <option value="B+" >B+</option>
                    <option value="B-" >B-</option>
                    <option value="AB+" >AB+</option>
                    <option value="AB-" >AB-</option>
                    <option value="O+" >O+</option>
                    <option value="O-" >O-</option>
                    <option value="Not sure">Not sure</option>
                </select>
            </div>

            <!-- Allergies -->
            <div class="mb-3">
                <label for="allergies" class="form-label">Do you have any allergy conditions?</label>
                <textarea class="form-control" name="Allergies" id="allergies" rows="1"></textarea>
            </div>

            <!-- Medical Conditions -->
            <div class="mb-3">
                <label for="medical_conditions" class="form-label">Do you have any medical conditions?</label>
                <textarea class="form-control" name="Medical_conditions" id="medical_conditions" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
        </form>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>